{
  "name": "zettnote",
  "displayName": "zettnote",
  "description": "Extension to support Zettelkasten markdown notes",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zettnote-explorer",
          "title": "ZettNote Explorer",
          "icon": "resources/link.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "zlinks",
          "name": "LINKS"
        },
        {
          "id": "zbacklinks",
          "name": "BACKLINKS"
        },
        {
          "id": "znotes",
          "name": "NOTES"
        }
      ]
    },
    "commands": [
      {
        "command": "zettnote.createNote",
        "title": "Create a Note",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "zettnote.createNote",
          "when": "view == znotes",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "zettnote.createNote",
        "key": "ctrl+alt+n",
        "mac": "alt+cmd+n"
      }
    ],
    "grammars": [
      {
        "language": "zettnote",
        "scopeName": "source.zettnote",
        "path": "./syntaxes/zettnote.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "graph-data-structure": "^1.12.0",
    "mocha": "^7.1.2",
    "typescript": "^3.9.2",
    "vscode-test": "^1.3.0"
  }
}
