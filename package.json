{
  "name": "zettnote",
  "displayName": "zettnote",
  "description": "Extension to support Zettelkasten markdown notes",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.45.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "ZettNote",
      "properties": {
        "zettnote.attachments.singleFolder": {
          "type": "boolean",
          "default": true,
          "description": "Use a single attachment folder for all notes."
        },
        "zettnote.attachments.path": {
          "type": "string",
          "default": "./attachments",
          "description": "Put attached files in the specified folder. Path is relative to the workspace root if using a single folder for all notes. If not using a single folder then the path is relative to the location of the note the files are being attached from."
        },
        "zettnote.views.enableNotes": {
          "type": "boolean",
          "default": true,
          "description": "Enable the 'NOTES' view in the explorer sidebar"
        },
        "zettnote.views.enableLinks": {
          "type": "boolean",
          "default": true,
          "description": "Enable the 'LINKS' view in the explorer sidebar"
        },
        "zettnote.views.enableBacklinks": {
          "type": "boolean",
          "default": true,
          "description": "Enable the 'BACKLINKS' view in the explorer sidebar"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zettnote-explorer",
          "title": "ZettNote Explorer",
          "icon": "resources/link.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "zlinks",
          "name": "LINKS"
        },
        {
          "id": "zbacklinks",
          "name": "BACKLINKS"
        },
        {
          "id": "znotes",
          "name": "NOTES"
        }
      ]
    },
    "commands": [
      {
        "command": "zettnote.createNote",
        "title": "Create a Note",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "zettnote.createNote",
          "when": "view == znotes",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "zettnote.createNote",
        "key": "ctrl+alt+n",
        "mac": "alt+cmd+n"
      },
      {
        "command": "zettnote.attachFile",
        "key": "ctrl+alt+a",
        "mac": "alt+cmd+a"
      }
    ],
    "grammars": [
      {
        "injectTo": [
          "text.html.markdown"
        ],
        "scopeName": "source.wikilink",
        "path": "./syntaxes/wikilink.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "graph-data-structure": "^1.12.0",
    "mocha": "^7.1.2",
    "typescript": "^3.9.2",
    "vscode-test": "^1.3.0"
  }
}
